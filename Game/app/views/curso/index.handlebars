<title>{{titulo}}</title>
<h1>Cursos Cadastrados <a href="/curso/create" type="button" class="btn btn-primary"><i class="fas fa-plus"></i></a></h1>

<div class="bs-component">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Sigla</th>
                    <th scope="col">Nome</th>
                    <th scope="col" class="options">Ações</th>
                </tr>
            </thead>
            
            <tbody>
                <tr class="table-info">
                    {{#each cursos}}
                        <th scope="row">{{sigla}}</th>
                        <td>{{nome}}</td>
                        <td class="options">
                            <a href="/curso/{{id}}"><i class="fas fa-eye"></i></a>
                            <a href="/curso/update/{{id}}"><i class="fas fa-edit"></i></a>
                            <a href="/curso/remove/{{id}}"><i class="fas fa-trash-alt"></i></a>
                        </td>
                </tr>
                {{/each}}
            </tbody>
    </table>
</div>